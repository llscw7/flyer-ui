<script setup lang="uts">
	// 响应式数�?
	const isLoading = ref<boolean>(false)

	// 点击处理方法
	const handleClick = (type: string) => {
		uni.showToast({
			title: `点击${type}`,
			icon: 'none',
			duration: 1500
		})
	}
	
	// 加载处理方法
	const handleLoading = () => {
		isLoading.value = true
		setTimeout(() => {
			isLoading.value = false
			uni.showToast({
				title: '加载完成',
				icon: 'success',
				duration: 1500
			})
		}, 2000)
	}
</script>

